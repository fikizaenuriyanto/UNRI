<script type="text/javascript">
    $(function () {
        $('#c_gender').select2();
    });

    function validateFormCreate() {
        if (document.getElementById("c_username").value == "") {
            alert("E-mail Pengguna masih Kosong");
            document.getElementById("c_username").focus();
            return false;
        }
        if (document.getElementById("c_account_name").value == "") {
            alert("Nama pengguna masih Kosong");
            document.getElementById("c_account_name").focus();
            return false;
        }
        if (document.getElementById("c_address").value == "") {
            alert("Alamat masih Kosong");
            document.getElementById("c_address").focus();
            return false;
        }
        if (document.getElementById("c_phone").value == "") {
            alert("Nomor telp masih Kosong");
            document.getElementById("c_phone").focus();
            return false;
        }
        if (document.getElementById("c_gender").value == "0") {
            alert("Pilih jenis kelamin terlebih dahulu");
            document.getElementById("c_gender").focus();
            return false;
        }
        if (document.getElementById("c_password").value == "") {
            alert("Password masih Kosong");
            document.getElementById("c_password").focus();
            return false;
        }
        CreatedData();
    }

    function CreatedData(){
        var data = JSON.stringify({
            "email_pengguna": document.getElementById("c_username").value,
            "password_pengguna": document.getElementById("c_password").value,
            "nama_pengguna": document.getElementById("c_account_name").value,
            "alamat_pengguna": document.getElementById("c_address").value,
            "telp_pengguna": document.getElementById("c_phone").value,
            "kelamin_pengguna": document.getElementById("c_gender").value
        });

        var xhr = new XMLHttpRequest();
        xhr.withCredentials = true;

        xhr.addEventListener("readystatechange", function () {
            if (this.readyState === 4) {
                console.log(this.responseText);
            }
        });

        xhr.open("POST", "@Url.Action("CreatedData", "Pengguna", null,null)");
        xhr.setRequestHeader("Content-Type", "application/json");

        xhr.onload = function () {
            const obj = JSON.parse(this.responseText);

            if (obj.metadata.code == 200) {
                ShowToast('success', obj.metadata.message, 'Operation success');
                loadORrefresh();
            } else if (obj.metadata.code == 201) {
                ShowToast('error', obj.metadata.message, 'Operation error');
            } else if (obj.metadata.code == 202) {
                ShowToast('warning', obj.metadata.message, 'Operation failed');
            }
        }

        xhr.send(data);
    }
</script>