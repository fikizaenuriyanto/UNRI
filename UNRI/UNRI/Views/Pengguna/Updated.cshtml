@model UNRI.Models.pengguna.data_pengguna

<!-- Small boxes (Stat box) -->
<form asp-controller="Pengguna" asp-action="OpenUpdated">
    <div class="row">
        <div class="col-12 col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12 col-12">
                            <div class="input-group mb-3">
                                <span>E-mail : </span>
                                <input type="text" id="u_username" name="u_username"
                                       required class="form-control" readonly
                                       placeholder="E-mail pengguna aplikasi"
                                       style="width:100%;" asp-for="email_pengguna" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-12">
                            <div class="input-group mb-3">
                                <span>Nama Pengguna : </span>
                                <input type="text" id="u_account_name" name="u_account_name"
                                       required class="form-control" asp-for="nama_pengguna"
                                       placeholder="Nama Pengguna" style="width:100%;" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-12">
                            <div class="input-group mb-3">
                                <span>Alamat Pengguna : </span>
                                <textarea id="u_address" name="u_address"
                                          style="width:100%;height:100px;" class="form-control"
                                          placeholder="Alamat pengguna" asp-for="alamat_pengguna"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-12">
                            <div class="input-group mb-3">
                                <span>Telp Pengguna : </span>
                                <input type="number" id="u_phone" name="u_phone"
                                       required class="form-control" asp-for="telp_pengguna"
                                       placeholder="Nomor telp Pengguna" style="width:100%;" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-12">
                            <div class="input-group mb-3">
                                <span>Jenis Kelamin : </span>
                                <select class="form-control select2" style="width:100%;"
                                        id="u_gender" name="u_gender"
                                        asp-for="kelamin_pengguna">

                                    <option value="0">Pilih jenis kelamin</option>

                                    @if (Model.kelamin_pengguna == "Laki-Laki")
                                    {
                                        <option value="Laki-Laki" selected="selected">Laki-Laki</option>
                                    }
                                    else
                                    {
                                        <option value="Laki-Laki">Laki-Laki</option>
                                    }

                                    @if (Model.kelamin_pengguna == "Perempuan")
                                    {
                                        <option value="Perempuan" selected="selected">Perempuan</option>
                                    }
                                    else
                                    {
                                        <option value="Perempuan">Perempuan</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-12">
                            <div class="input-group mb-3">
                                <span>Password : </span>
                                <input type="text" id="u_password" name="u_password"
                                       required="required" class="form-control"
                                       placeholder="Password" style="width:100%;"
                                       asp-for="password_pengguna" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8 col-8"></div>
                    <div class="col-md-2 col-2">
                        <button type="button" id="cancelBTN" name="cancelBTN"
                                class="btn btn-warning form-control"
                                onclick="loadORrefresh()">
                            Cancel
                        </button>
                    </div>
                    <div class="col-md-2 col-2">
                        <button type="button" id="submit" name="submit"
                                class="btn btn-success form-control"
                                onclick="validateFormUpdate()">
                            Submit
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

