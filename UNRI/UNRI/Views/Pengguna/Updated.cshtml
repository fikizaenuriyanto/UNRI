<script type="text/javascript">
    $(function () {
        $('#u_gender').select2();
    });

    function validateFormUpdate() {
        if (document.getElementById("u_username").value == "") {
            alert("E-mail Pengguna masih Kosong");
            document.getElementById("u_username").focus();
            return false;
        }
        if (document.getElementById("u_account_name").value == "") {
            alert("Nama pengguna masih Kosong");
            document.getElementById("u_account_name").focus();
            return false;
        }
        if (document.getElementById("u_address").value == "") {
            alert("Alamat masih Kosong");
            document.getElementById("u_address").focus();
            return false;
        }
        if (document.getElementById("u_phone").value == "") {
            alert("Nomor telp masih Kosong");
            document.getElementById("u_phone").focus();
            return false;
        }
        if (document.getElementById("u_gender").value == "0") {
            alert("Pilih jenis kelamin terlebih dahulu");
            document.getElementById("u_gender").focus();
            return false;
        }
        if (document.getElementById("u_password").value == "") {
            alert("Password masih Kosong");
            document.getElementById("u_password").focus();
            return false;
        }
        UpdatedData();
    }

    function UpdatedData() {
        var data = JSON.stringify({
            "email_pengguna": document.getElementById("u_username").value,
            "password_pengguna": document.getElementById("u_password").value,
            "nama_pengguna": document.getElementById("u_account_name").value,
            "alamat_pengguna": document.getElementById("u_address").value,
            "telp_pengguna": document.getElementById("u_phone").value,
            "kelamin_pengguna": document.getElementById("u_gender").value
        });

        var xhr = new XMLHttpRequest();
        xhr.withCredentials = true;

        xhr.addEventListener("readystatechange", function () {
            if (this.readyState === 4) {
                console.log(this.responseText);
            }
        });

        xhr.open("PUT", "@Url.Action("UpdatedData", "Pengguna", null,null)");
        xhr.setRequestHeader("Content-Type", "application/json");

        xhr.onload = function () {
            const obj = JSON.parse(this.responseText);

            if (obj.metadata.code == 200) {
                ShowToast('success', obj.metadata.message, 'Operation success');
                loadORrefresh();
            } else if (obj.metadata.code == 201) {
                ShowToast('error', obj.metadata.message, 'Operation error');
            } else if (obj.metadata.code == 202) {
                ShowToast('warning', obj.metadata.message, 'Operation failed');
            }
        }

        xhr.send(data);
    }
</script>