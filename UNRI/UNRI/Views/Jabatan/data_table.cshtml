@model IEnumerable<UNRI.Models.jabatan.data_jabatan>

<!-- Small boxes (Stat box) -->
<div class="row">
    <div class="col-12 col-12">
        <table id="tabelView" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Id Jabatan</th>
                    <th>Nama Jabatan</th>
                    <th>
                        <button id="addAccounts" class="btn btn-info"
                                onclick="BukaCreated()">
                            Buat Jabatan Baru
                        </button>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var _data in Model)
                {
                    <tr>
                        <th>@_data.id_jabatan</th>
                        <th>@_data.nm_jabatan</th>
                        <th>
                            <button id="editAccounts" class="btn btn-success"
                                onclick="GetAccount('@_data.id_jabatan')">
                                Edit
                            </button>
                            &ensp;
                            <button id="delAccounts" class="btn btn-warning"
                                onclick="DeletedData('@_data.id_jabatan')">
                                Hapus
                            </button>
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
