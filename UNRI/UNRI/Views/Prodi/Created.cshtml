<script type="text/javascript">
    $(function () {
        $('#c_gender').select2();
        GetAllFakultas();
    });

    function GetAllFakultas() {
        var xhr = new XMLHttpRequest();
        xhr.withCredentials = true;

        xhr.addEventListener("readystatechange", function () {
            if (this.readyState === 4) {
                console.log(this.responseText);
            }
        });

        xhr.open("GET", "@Url.Action("GetFakultas", "Jurusan", null,null)");

        xhr.onload = function () {
            const obj = JSON.parse(this.responseText);

            if (obj.metadata.code == 200) {
                $("#c_fakultas").empty();
                $("<option value='0' selected='selected'>Pilih fakultas</option>").appendTo("#c_fakultas");

                for (i = 0; i <= obj.response.Fakultas.length - 1; i++) {
                    $('<option value="' + obj.response.Fakultas[i].id_fakultas + '">' +
                        obj.response.Fakultas[i].nm_fakultas + '</option>').appendTo('#c_fakultas');
                }
            }
        }

        xhr.send();
    }

    function validateFormCreate() {
        if (document.getElementById("c_idjurusan").value == "") {
            alert("Kode jurusan masih Kosong");
            document.getElementById("c_idjurusan").focus();
            return false;
        }
        if (document.getElementById("c_nmjurusan").value == "") {
            alert("Nama jurusan masih Kosong");
            document.getElementById("c_nmjurusan").focus();
            return false;
        }
        if (document.getElementById("c_fakultas").value == "0") {
            alert("Pilih fakultas terlebih dahulu");
            document.getElementById("c_fakultas").focus();
            return false;
        }

        CreatedData();
    }

    function CreatedData() {
        var data = JSON.stringify({
            "id_fakultas": document.getElementById("c_fakultas").value,
            "id_jurusan": document.getElementById("c_idjurusan").value,
            "nm_jurusan": document.getElementById("c_nmjurusan").value
        });

        var xhr = new XMLHttpRequest();
        xhr.withCredentials = true;

        xhr.addEventListener("readystatechange", function () {
            if (this.readyState === 4) {
                console.log(this.responseText);
            }
        });

        xhr.open("POST", "@Url.Action("CreatedData", "Jurusan", null,null)");
        xhr.setRequestHeader("Content-Type", "application/json");

        xhr.onload = function () {
            const obj = JSON.parse(this.responseText);

            if (obj.metadata.code == 200) {
                ShowToast('success', obj.metadata.message, 'Operation success');
                loadORrefresh();
            } else if (obj.metadata.code == 201) {
                ShowToast('error', obj.metadata.message, 'Operation error');
            } else if (obj.metadata.code == 202) {
                ShowToast('warning', obj.metadata.message, 'Operation failed');
            }
        }

        xhr.send(data);
    }
</script>